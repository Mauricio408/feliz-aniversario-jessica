    <style>
      #overlay {
        position: fixed; top: 0; left: 0; width: 100%; height: 100%;
        background: rgba(0,0,0,0.85); z-index: 9999;
        display: flex; justify-content: center; align-items: center; flex-direction: column;
        color: white; font-family: sans-serif; text-align: center;
      }
      .btn {
        margin-top: 20px; padding: 12px 24px; background: #ef2d5e; 
        border-radius: 4px; font-weight: bold; cursor: pointer;
      }
    </style>
  </head>

  <body style="margin: 0; overflow: hidden;">
    
    <!-- Tela de Início -->
    <div id="overlay">
      <div style="font-size: 24px; font-weight: bold;">Experiência AR</div>
      <div style="margin-top: 10px; font-size: 16px; color: #ccc;">Aponte para o marcador Hiro</div>
      <div class="btn">Toque para Iniciar</div>
    </div>

    <a-scene
      embedded
      arjs="sourceType: webcam; debugUIEnabled: false; detectionMode: mono_and_matrix; matrixCodeType: 3x3;"
      renderer="logarithmicDepthBuffer: true; colorManagement: true;"
      vr-mode-ui="enabled: false"
      gesture-detector
      id="scene"
    >

      <a-assets>
        <!-- Carrega a imagem.png -->
        <img id="minha-foto" src="./imagem.png" />
      </a-assets>

      <!-- Marcador HIRO -->
      <a-marker 
        preset="hiro"
        raycaster="objects: .clickable"
        emitevents="true"
        cursor="fuse: false; rayOrigin: mouse;"
        smooth="true"
      >
        <!-- 
           NOTA: Removi o "scale" fixo daqui.
           O script lá embaixo vai calcular o tamanho exato agora.
           Adicionei o id="imagem-ar" para o script encontrar este elemento.
        -->
        <a-image
          id="imagem-ar"
          src="#minha-foto"
          position="0 1 0"
          rotation="-90 0 0"
          class="clickable"
          gesture-handler
        ></a-image>
      </a-marker>

      <a-entity camera></a-entity>
    </a-scene>

    <script>
      // 1. Lógica do Botão de Início
      const overlay = document.getElementById('overlay');
      overlay.addEventListener('click', function() {
        overlay.style.display = 'none';
        const context = new AudioContext();
        context.resume().then(() => context.close());
      });

      // 2. CORREÇÃO AUTOMÁTICA DE PROPORÇÃO DA IMAGEM
      const img = document.querySelector("#minha-foto");
      const el = document.querySelector("#imagem-ar");

      function ajustarProporcao() {
        // Pega a largura e altura originais do arquivo PNG
        const width = img.naturalWidth;
        const height = img.naturalHeight;

        if (width && height) {
           const ratio = width / height;
           const tamanhoBase = 2.5; // Tamanho geral da imagem na tela

           // Se a imagem for paisagem (mais larga que alta)
           if (ratio > 1) { 
             el.setAttribute("width", tamanhoBase); 
             el.setAttribute("height", tamanhoBase / ratio);
           } 
           // Se a imagem for retrato (mais alta que larga) ou quadrada
           else { 
             el.setAttribute("height", tamanhoBase);
             el.setAttribute("width", tamanhoBase * ratio);
           }
        }
      }

      // Executa a correção assim que a imagem carregar
      img.onload = ajustarProporcao;
      // Caso a imagem já esteja no cache, executa agora mesmo
      if (img.complete) ajustarProporcao();
    </script>
  </body>
</html>
